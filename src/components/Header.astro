---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2 class="font-[inter] uppercase hover:text-[#C63C51] duration-300"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink class={'text-sm'} href="/">Home</HeaderLink>
			<HeaderLink class={'text-sm'} href="/blog">Blog</HeaderLink>
			<HeaderLink class={'text-sm'} href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://linkedin.com/in/nadunkms" target="_blank">
				<span class="sr-only">Follow on LinkedIn</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="16" height="16">
					<path
						fill="currentColor"
						d="M22.23 0H1.77C.79 0 0 .77 0 1.72v20.54C0 23.23.79 24 1.77 24h20.46C23.21 24 24 23.23 24 22.26V1.72C24 .77 23.21 0 22.23 0zM7.06 20.45H3.56V9h3.5v11.45zM5.31 7.68c-1.12 0-2.03-.91-2.03-2.03s.91-2.03 2.03-2.03S7.34 4.53 7.34 5.65s-.91 2.03-2.03 2.03zm15.14 12.77h-3.5v-5.72c0-1.36-.03-3.1-1.89-3.1-1.89 0-2.18 1.48-2.18 3v5.82h-3.5V9h3.36v1.56h.05c.47-.89 1.62-1.82 3.34-1.82 3.57 0 4.23 2.35 4.23 5.41v6.3z"
					/>
				</svg>
			</a>
						
			<a href="https://X.com/nadunkms" target="_blank">
				<span class="sr-only">Follow Astro on X.com</span>
				<svg xmlns="http://www.w3.org/2000/svg" shape-rendering="geometricPrecision" 
					 text-rendering="geometricPrecision" image-rendering="optimizeQuality" 
					 fill-rule="evenodd" clip-rule="evenodd" viewBox="0 0 512 462.799" 
					 width="16" height="16" aria-hidden="true">
				  <path fill="currentColor" 
						fill-rule="nonzero" 
						d="M403.229 0h78.506L310.219 196.04 512 462.799H354.002L230.261 301.007 
						   88.669 462.799h-78.56l183.455-209.683L0 0h161.999l111.856 147.88L403.229 0zm-27.556 
						   415.805h43.505L138.363 44.527h-46.68l283.99 371.278z"/>
				</svg>
			  </a>			  
			<a href="https://github.com/nadunkms" target="_blank">
				<span class="sr-only">Go to My GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="16" height="16"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 1%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
